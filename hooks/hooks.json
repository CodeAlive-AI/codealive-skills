{
  "description": "CodeAlive authentication check on session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check_auth.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
